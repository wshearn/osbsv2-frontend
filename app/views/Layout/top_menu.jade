ul.nav.navbar-nav.navbar-left
  each item in menu
    - var isActive = ((typeof(activepageid) !== "undefined" && item.menuid === activepageid) ? 'active' : '')
    li(class=isActive)
      a(href="#{item.url}") #{item.name}
ul.nav.navbar-nav.navbar-right
  li.dropdown
    a.dropdown-toggle(data-toggle="dropdown") #{user.fullname || user.username}
      span.caret
    ul.dropdown-menu
      li
        a(href="/user/settings") User Settings
      if user.groups.indexOf("admin") > -1
        li
          a(href="/admin") Admin
      li.divider
      li
        a(href="/logout") Logout
