doctype html
html
  head
    include ../Layout/head
    link(rel="stylesheet", type="text/css", href="/css/users/signin.css")
  body
    div.container
      form.form-signin(action='/users', method='POST')
        input.form-control(type='text', name='token', placeholder="Token", required)
        input.form-control(type='text', name='fullname', placeholder="Name", autofocus)
        input.form-control(type='text', name='username', placeholder="Username", required)
        input.form-control(type='password', name='password', placeholder="Password", required)
        button.btn.btn-primary.btn-lg.btn-block(type='submit') Register